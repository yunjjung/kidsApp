<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/read_heart"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="심박수 센서" />

        <TextView
            android:id="@+id/read_gyro"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="자이로 센서" />

        <TextView
            android:id="@+id/read_stepCount"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="걸음수 센서" />

        <com.github.mikephil.charting.charts.LineChart
            android:id="@+id/chart_heart"
            android:layout_width="match_parent"
            android:layout_height="180dp" />

        <com.github.mikephil.charting.charts.LineChart
            android:id="@+id/chart_gyro"
            android:layout_width="match_parent"
            android:layout_height="180dp" />

        <com.github.mikephil.charting.charts.LineChart
            android:id="@+id/chart_stepCount"
            android:layout_width="match_parent"
            android:layout_height="180dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="40dp"
                android:text="평균 심박수 : " />

            <TextView
                android:id="@+id/avg_heart"
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="40dp"
                android:text="0" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="40dp"
                android:text="활동 LEVEL : " />

            <TextView
                android:id="@+id/avg_level"
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="40dp"
                android:text="0" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="40dp"
                android:text="걸음 수 : " />

            <TextView
                android:id="@+id/total_stepCount"
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="40dp"
                android:text="0" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>